import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from sklearn import linear_model
df=pd.read_csv(r"C:\Users\Lenovo\Documents\Machine Learning\canada_per_capita_income.csv")
df
reg=linear_model.LinearRegression()
reg.fit(df[['year']],df['per_capita_income (US$)'])
reg.predict([[2020]])
%matplotlib inline
import matplotlib.pyplot as plt

plt.xlabel('Year')
plt.ylabel('Per Capita Income')
plt.scatter(df.year, df['per_capita_income (US$)'], color='red', marker='+') 
plt.plot(df.year, reg.predict(df[['year']]), color='green') 
plt.show()  
